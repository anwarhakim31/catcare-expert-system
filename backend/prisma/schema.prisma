generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User{
   username String @unique @db.VarChar(100) 
   fullname String 
   password String 
   photo String? 
   createdAt DateTime @default(now())
   updatedAt DateTime @updatedAt
   isAdmin Boolean @default(false)

   @@map("users")
}

model Symptom{
    id String @id       
    symptom String 
    createdAt DateTime @default(now())

    @@map("symptoms")
}


model Disease{
    id String @id 
    name String @unique 
    image String
    createdAt DateTime @default(now())
    description String
    solution String

   @@map("diseases")
}
