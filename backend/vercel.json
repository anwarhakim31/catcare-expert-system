{
  "version": 2,
  "name": "backend",

  "builds": [
    {
      "src": "src/main.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "src/main.ts",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH"]
    }
  ],
  "crons": [
    {
      "path": "/api/diagnosis/cron",
      "schedule": "0 0 * * *"
    }
  ]
}
